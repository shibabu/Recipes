<%= render '/shared/errors', obj: @chef %>
<div class='row'>
  <div class='well col-md-8 col-md-offset-2'>
    <%= form_for @chef do |f| %>
      <%= f.label 'Name' %>
      <%= f.text_field :chefname %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password%>

      <%= f.submit @chef.new_record? ? 'Register' : 'Edit Profile', class: 'btn btn-success' %>
      <%= link_to 'Cancel', chef_path, class: 'btn btn-warning btn-cancel' %>

      <% if current_user.admin? %>
        <p class="divider"></p>
        <%= link_to 'Delete', chef_path, class: 'btn btn-danger btn-cancel', :method => :delete, data: {confirm: "You are about to delete Chef : \n\"#{@chef.chefname}\" \nAre you sure?"} %>
      <% end %>

    <% end %>
  </div>
</div>
