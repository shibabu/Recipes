<header class='navbar navbar-fixed-top navbar-default'>
  <div class='container'>
    <%= link_to 'Recipes', home_path, class: 'btn btn-lg btn-success', id: 'logo' %>

    <ul class='nav-ul-item'>
      <li class='dropdown'>
        <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            Origins <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Style.all.each do |style| %>
            <li> <%= link_to style.name, style_path(style) %> </li>
          <% end %>
          <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to 'New Origin', new_style_path %>
              </li>
          <% end %>
        </ul>
      </li>
    </ul>

    <ul class='nav-ul-item'>
      <li class='dropdown'>
        <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            Ingredients <b class='caret'></b>
        <% end %>
        <ul class='dropdown-menu'>
          <% Ingredient.all.each do |ingredient| %>
              <li> <%= link_to ingredient.name, ingredient_path(ingredient) %> </li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
              <li>
                <%= link_to 'New Ingredient', new_ingredient_path %>
              </li>
          <% end %>
        </ul>
      </li>
    </ul>

    <% if logged_in? %>
      <div class='nav-item'>
        <%= link_to 'Add Recipe', new_recipe_path, class:'btn btn-default btn-warning'%>
      </div>
      <ul class='nav-ul-item pull-right'>
        <li class='dropdown'>
          <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            <%= current_user.chefname.capitalize %> <b class='caret'></b>
          <% end %>
          <ul class='dropdown-menu'>
            <li> <%= link_to 'View Profile', chef_path(current_user) %> </li>
            <li> <%= link_to 'Edit Profile', edit_chef_path(current_user) %> </li>
            <li class='divider'></li>
            <li> <%= link_to 'Logout', logout_path %> </li>
          </ul>
        </li>
      </ul>

    <% else %>

      <div class='nav-item pull-right'>
        <%= link_to 'Login', login_path, class:'btn btn-default btn-success'%>
      </div>
    <% end %>

  </div>
</header>
